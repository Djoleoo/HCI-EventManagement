<Page x:Class="BookingApp.View.Owner.AccommodationRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AccommodationRegistration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="NameLabel" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="108" VerticalAlignment="Top" Margin="10,21,0,0" Content="Name:"/>
            <Label x:Name="LocationLabel" Grid.Row="1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="108" VerticalAlignment="Center" Margin="10,0,0,0" Content="Location:"></Label>
            <Label x:Name="AccommodationTypeLabel" Grid.Row="2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center" Height="41" Margin="14,0,0,0" Content="Type:"></Label>
            <Label x:Name="MaxGuestNumberLabel1" Grid.Row="3" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Width="150" VerticalAlignment="Top" Height="41" Margin="0,11,0,0" Content="Max number"/>
            <Label x:Name="MaxGuestNumberLabel2" Grid.Row="3" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="150" VerticalAlignment="Top" Height="41" Margin="10,35,0,0" Content="of guests:"/>

            <Label x:Name="MinReservationDaysaLabel1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="145" VerticalAlignment="Top" Height="41" Grid.Column="2" Margin="10,14,0,0" Content="Min number of"/>
            <Label x:Name="MinReservationDaysaLabel2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="98" VerticalAlignment="Top" Height="41" Grid.Column="2" Margin="18,43,0,0" Content="res. days:"/>
            <Label x:Name="CancelationDaysLimitLabel1" Grid.Row="1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="132" VerticalAlignment="Top" Height="41" Grid.Column="2" Margin="10,10,0,0" Content="Cancelation"/>
            <Label x:Name="CancelationDaysLimitLabel2" Grid.Row="1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="132" VerticalAlignment="Top" Height="41" Grid.Column="2" Margin="10,35,0,0" Content="Days Limit:"/>
            <Label x:Name="ImagesLabel" Grid.Row="2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="82" VerticalAlignment="Center" Height="41" Grid.Column="2" Margin="10,0,0,0" Content="Images"/>
            <TextBox Text="{Binding Path=Accommodation.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>
            <TextBox Text="{Binding Path=Accommodation.Location.City, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>
            <TextBox Text="{Binding Path=Accommodation.AccommodationType, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>
            <TextBox Text="{Binding Path=Accommodation.MaxGuestNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>

            <TextBox Text="{Binding Path=Accommodation.MinReservationDays, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>
            <TextBox Text="{Binding Path=Accommodation.CancelationDaysLimit, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>


            <Button x:Name="AcceptButton" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Height="42" Width="124" FontSize="22" FontWeight="Bold" Margin="96,25,0,0" Content="Accept" Click="AcceptButtonClick"/>
            <Button x:Name="DeclineButton" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Height="42" Width="124" FontSize="22" FontWeight="Bold" Content="Decline" Margin="20,25,0,0"/>
            <Button x:Name="ImagesButton" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Height="42" Width="210" FontSize="22" FontWeight="Bold" Content="Add Image" Margin="10,0,0,0"/>


        </Grid>
    </Grid>

</Page>

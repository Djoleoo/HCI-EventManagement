<Page x:Class="BookingApp.View.Owner.AccommodationRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Owner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccommodationRegistration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="imeLabel" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="108" VerticalAlignment="Top" Margin="10,21,0,0" Content="{ns:Loc Ime:}"/>
        <Label x:Name="prezimeLabel" Grid.Row="1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="108" VerticalAlignment="Center" Margin="10,0,0,0" Content="{ns:Loc Prezime:}"></Label>
        <Label x:Name="datumRodjLabel1" Grid.Row="2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Height="41" Margin="10,8,0,0" Content="{ns:Loc Datum}"></Label>
        <Label x:Name="datumRodjLabel2" Grid.Row="2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top" Height="41" Margin="10,31,0,0" Content="{ns:Loc rodjenja:}"></Label>
        <Label x:Name="brojTelefonaLabel" Grid.Row="3" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="150" VerticalAlignment="Center" Height="41" Content="{ns:Loc Broj telefona:}" Margin="10,0,0,0"/>
        <Label x:Name="emailLabel" Grid.Row="4" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Width="140" VerticalAlignment="Center" Height="41" Content="{ns:Loc Email adresa:}"/>

        <Label x:Name="ulicaLabel" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="74" VerticalAlignment="Center" Height="41" Grid.Column="2" Content="{ns:Loc Ulica:}" Margin="10,0,0,0"/>
        <Label x:Name="brojLabel" Grid.Row="1" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="86" VerticalAlignment="Center" Height="41" Grid.Column="2" Content="{ns:Loc Broj:}" Margin="10,0,0,0"/>
        <Label x:Name="gradLabel" Grid.Row="2" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="60" VerticalAlignment="Center" Height="41" Grid.Column="2" Content="{ns:Loc Grad:}" Margin="10,0,0,0"/>
        <Label x:Name="drzavaLabel" Grid.Row="3" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="82" VerticalAlignment="Center" Height="41" Grid.Column="2" Content="{ns:Loc Drzava:}" Margin="10,0,0,0"/>
        <Label x:Name="zvanjeLabel" Grid.Row="5" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="76" VerticalAlignment="Center" Height="41" Content="{ns:Loc Zvanje:}" Margin="10,0,0,0"/>
        <Label x:Name="brojLicneKarteLabel1" Grid.Row="4" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="98" VerticalAlignment="Top" Height="32" Grid.Column="2" Content="{ns:Loc Broj licne}" Margin="10,9,0,0"/>
        <Label x:Name="brojLicneKarteLabel2" Grid.Row="4" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="82" VerticalAlignment="Top" Height="32" Grid.Column="2" Content="{ns:Loc karte:}" Margin="10,33,0,0"/>
        <Label x:Name="godinaStazaLabel" Grid.Row="5" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Width="144" VerticalAlignment="Center" Height="41" Grid.Column="2" Content="{ns:Loc Godina staza:}" Margin="6,0,0,0"/>
        <TextBox Text="{Binding Path=profesorDTO.Ime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Prezime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <DatePicker SelectedDate="{Binding Path=profesorDTO.Datum, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <!--<TextBox Text="{Binding Path=profesorDTO.Datum, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32"/>-->
        <TextBox Text="{Binding Path=profesorDTO.Broj, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Zvanje, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>

        <TextBox Text="{Binding Path=profesorDTO.Ulica, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Br, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Grad, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Drzava, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Br_lic, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
        <TextBox Text="{Binding Path=profesorDTO.Staz, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="32" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>


        <Button x:Name="potvrdiButton" Click="addClick" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Top" Height="42" Width="124" FontSize="22" FontWeight="Bold" Margin="96,59,0,0" Grid.RowSpan="2" Content="{ns:Loc Potvrdi}"></Button>
        <Button x:Name="odustaniButton" Click="noClick" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Top" Height="42" Width="124" FontSize="22" FontWeight="Bold" Margin="20,59,0,0" Grid.RowSpan="2" Content="{ns:Loc Odustani}"></Button>


    </Grid>
</Page>

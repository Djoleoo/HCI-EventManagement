<Page x:Class="BookingApp.View.Guide.Pages.CreateTourForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Guide.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="CreateTourForm">

    <Grid Background="Linen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"   FontWeight="Bold">Tour name:</TextBlock>
                <TextBox x:Name="TourNameTextbox" Width="300" Height="30" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"   FontWeight="Bold">Duration:</TextBlock>
                <TextBox x:Name="DurationTextbox" Width="300" Height="30" HorizontalAlignment="Center" Text="{Binding Path=Duration}"></TextBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"  >Max tourists:</TextBlock>
                <TextBox x:Name="MaxTouristTextbox" Width="300" Height="30" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" >
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Center"   FontWeight="Bold">Description:</TextBlock>
                <TextBox x:Name="DescriptionTextbox" Width="300" Height="95" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Width="516">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0">
                        <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">State:</TextBlock>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1">
                        <TextBox x:Name="StateBox" Width="200" Height="30" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="5"/>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="0">
                        <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">City:</TextBlock>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <TextBox x:Name="CityBox" Width="200" Height="30" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="5"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">Language:</TextBlock>
                <TextBox x:Name="LanguageTextbox" Width="300" Height="30" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0" >
            <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,-50,0,0" >KeyPoint:</TextBlock>
                <Button Height="100" Width="100" HorizontalAlignment="Right" Margin="2">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="18" FontWeight="Bold">ADD KEYPOINT</TextBlock>
                </Button>
            <TextBox x:Name="KeyPointTextbox" Width="300" Height="30" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="0" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="90" FontSize="22" Content="Create" Click="ClickCreateButton" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="90" FontSize="22" Content="Cancel" Click="ClickCancelButton" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="90" FontSize="22" Click="BtnSelectFiles_Click" FontWeight="Bold">Attach images</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
